{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    // "declarationDir": "types",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": [
      "DOM",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "baseUrl": ".",
    "outDir": "lib",
    "paths": {
      "@/*": ["src/*"],
      "@tmp/*": ["src/pages/.umi/*"]
    },
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
